game:GetService("StarterGui").ResetPlayerGuiOnSpawn = false

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

wait = task.wait

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 30)
button.Position = UDim2.new(0.5, -100, 0.5, 0)
button.Text = "Speed Animation V2"
button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Parent = screenGui

local button2 = Instance.new("TextButton")
button2.Size = UDim2.new(0, 200, 0, 50)
button2.Position = UDim2.new(0.5, -100, 0.5, 63)
button2.Text = "Apply Speed Animation"
button2.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
button2.TextColor3 = Color3.fromRGB(255, 255, 255)
button2.Parent = button

local TextBox = Instance.new("TextBox")
TextBox.Size = UDim2.new(0, 200, 0, 50)
TextBox.Position = UDim2.new(0.5, -100, 0.5, 13)
TextBox.Text = ""
TextBox.PlaceholderText = "Speed Default = 1"
TextBox.ClearTextOnFocus = false
TextBox.BackgroundColor3 = Color3.fromRGB(140, 0, 255)
TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)
TextBox.Parent = button

local TextBoxr = Instance.new("TextButton")
TextBoxr.Size = UDim2.new(0, 200, 0, 50)
TextBoxr.Position = UDim2.new(0.5, -100, 0.5, 113)
TextBoxr.Text = "Reset"
TextBoxr.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
TextBoxr.TextColor3 = Color3.fromRGB(255, 255, 255)
TextBoxr.Parent = button


TextBoxr.Activated:Connect(function()
    local number = tonumber(TextBox.Text)
    if number then
        local a = game:GetService("Players").LocalPlayer.Character or game:GetService("Players").LocalPlayer.CharacterAdded:wait()

        while wait() do
            local b = a:FindFirstChildOfClass("Humanoid") or a:FindFirstChildOfClass("AnimationController")
            if not b or not a then continue end
            for c, d in next, b:GetPlayingAnimationTracks() do
                d:AdjustSpeed(1)
    end
end
    else
        warn("Ошибка: введено некорректное число.")
    end
end)


button2.Activated:Connect(function()
    local number = tonumber(TextBox.Text)
    if number then
        local a = game:GetService("Players").LocalPlayer.Character or game:GetService("Players").LocalPlayer.CharacterAdded:wait()

        while wait() do
            local b = a:FindFirstChildOfClass("Humanoid") or a:FindFirstChildOfClass("AnimationController")
            if not b or not a then continue end
            for c, d in next, b:GetPlayingAnimationTracks() do
                d:AdjustSpeed(number)
    end
end
    else
        warn("Ошибка: введено некорректное число.")
    end
end)


button.Draggable = true
